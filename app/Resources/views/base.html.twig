<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}HakinLumberjack{% endblock %}</title>
        {% stylesheets '@bootstrap_css' %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/bootstrap.css') }}"/>
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('hackin_icon.png') }}" />
        <script type="text/javascript" src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    </head>

    <body>
    {% block navbar %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ path('BloggerBlogBundle_homepage') }}">HakinLumberjack</a>
                    </div>
                    {% block navbar_options %}
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('BloggerBlogBundle_about') }}">About</a></li>
                            <li><a href="{{ path('BloggerBlogBundle_contact') }}">Contact</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            {% if app.user %}
                                <li><a href="{{ path('BloggerAdminBundle_admin') }}">Admin</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">Sign out</a></li>
                            {% else %}
                                <li><a href="{{ path('fos_user_security_login') }}">Sign in</a></li>
                            {% endif %}
                        </ul>
                    </div>
                    {% endblock %}
                </div>
            </nav>
    {% endblock %}

    <div class="container">
        <div class="row">
            {% block row_size %}
            <div class="col-md-7 col-lg-offset-2 col-md-offset-2 col-sm-offset-1">
                {% block body %}
                {% endblock body %}
            </div>
            {% endblock row_size %}
        </div>
    </div>

        {% javascripts '@jquery' '@bootstrap_js' %}
    <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
    <script type="text/javascript" src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    {% endjavascripts %}

    {% block page_java_script %}
    {% endblock page_java_script %}

    </body>
</html>
