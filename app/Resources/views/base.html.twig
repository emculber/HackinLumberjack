<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}HakinLumberjack{% endblock %}</title>
        {% stylesheets '@bootstrap_css' %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/bootstrap.css') }}"/>
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('hackin_icon.png') }}" />
    </head>

    <body>
    {% block navbar %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ path('BloggerBlogBundle_homepage') }}">HakinLumberjack</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('BloggerBlogBundle_about') }}">About</a></li>
                            <li><a href="{{ path('BloggerBlogBundle_contact') }}">Contact</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{ path('BloggerBlogBundle_create_blog') }}">Create Blog</a></li>
                            <li><a href="{{ path('BloggerBlogBundle_signin') }}">Sign in</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
    {% endblock %}

    <div class="container">
        <div class="row">
            <div class="col-md-7 col-lg-offset-2 col-md-offset-2 col-sm-offset-1">
                {% block body %}
                {% endblock body %}
            </div>
        </div>
    </div>

        {% javascripts '@jquery' '@bootstrap_js' %}
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        {% endjavascripts %}
    </body>
</html>
